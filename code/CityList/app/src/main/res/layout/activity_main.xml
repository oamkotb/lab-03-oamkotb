<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_city_btn"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginStart="5dp"
        android:text="Add City"
        app:layout_constraintBottom_toTopOf="@+id/city_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_city_btn"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginEnd="5dp"
        android:text="Delete City"
        app:layout_constraintBottom_toTopOf="@+id/city_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_city_btn"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:text="Edit City"
        app:layout_constraintBottom_toTopOf="@+id/city_list"
        app:layout_constraintEnd_toStartOf="@+id/delete_city_btn"
        app:layout_constraintStart_toEndOf="@+id/add_city_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"></ListView>
</androidx.constraintlayout.widget.ConstraintLayout>